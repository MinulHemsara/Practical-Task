@model List<PurchaseRequest>

@{
    ViewBag.Title = "Purchase Request Approval";
}

<h2>Pending Purchase Requests</h2>

<table class="table">
    <tr>
        <th>Purchase Request Number</th>
        <th>Item Code</th>
        <th>Item Quantity</th>
        <th>Item Cost</th>
        <th>Total Cost</th>
        <th>Action</th>
    </tr>

    @foreach (var request in Model)
    {
        <tr>
            <td>@request.PurchaseRequestNumber</td>
            <td>@request.ItemCode</td>
            <td>@request.ItemQuantity</td>
            <td>@request.ItemCost</td>
            <td>@request.TotalCost</td>
            <td>
                @using (Html.BeginForm("Approve", "Purchase"))
                {
                    @Html.Hidden("id", request.PurchaseRequestNumber)
                    <button type="submit" class="btn btn-success">Approve</button>
                }
                @using (Html.BeginForm("Disapprove", "Purchase"))
                {
                    @Html.Hidden("id", request.PurchaseRequestNumber)
                    <button type="submit" class="btn btn-danger">Disapprove</button>
                }
            </td>
        </tr>
    }
</table>
